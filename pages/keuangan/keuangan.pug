script.
  function setStatus(element) {
    const status = element.value;
    const row = element.closest('tr');
    const statusCell = row.querySelector('.status_kehadiran');
    
    if (status === 'lunas') {
      statusCell.innerHTML = '<span class="badge badge-success">Lunas</span>';
    } else if (status === 'belum_bayar') {
      statusCell.innerHTML = '<span class="badge badge-danger">Belum Bayar</span>';
    }
  }