doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Edit User
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script.
      function togglePassword() {
        const passwordInput = document.getElementById('password');
        if (passwordInput.type === 'password') {
          passwordInput.type = 'text';
        } else {
          passwordInput.type = 'password';
        }
      }
  body
    .container.mt-5
      h2.mb-4 Edit User

      if error
        .alert.alert-danger #{error}

      form(method='POST', action=`/user/update/${user.id_user}`)
        .mb-3
          label.form-label(for="nama") Nama
          input.form-control(type="text", name="nama", id="nama", value=user.nama, required)

        .mb-3
          label.form-label(for="email") Email
          input.form-control(type="email", name="email", id="email", value=user.email, required)

        .mb-3
          label.form-label(for="no_hp") No HP
          input.form-control(type="text", name="no_hp", id="no_hp", value=user.no_hp, required)

        .mb-3
          label.form-label(for="password") Password
          .input-group
            input.form-control(type="password", name="password", id="password", required)
            button.btn.btn-outline-secondary(type="button", onclick="togglePassword()") üëÅÔ∏è

        .mb-3
          label.form-label(for="id_role") Role
          select.form-select(name="id_role", id="id_role", required)
            option(value="") -- Pilih Role --
            option(value="2", selected=user.id_role==2) Staff Keuangan
            option(value="3", selected=user.id_role==3) Staff Kegiatan

        button.btn.btn-primary(type="submit") Update
        a.btn.btn-secondary.ms-2(href="/user") Batal
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="/js/jquery.min.js")
    script(src="/js/popper.min.js")
    script(src="/js/bootstrap.bundle.min.js") 