    // header section start
    .header_section
        .header_main
            .mobile_menu.d-lg-none
                nav.navbar.navbar-expand-lg.navbar-light.bg-light
                    .logo_mobile
                        a(href='/dashboardAdmin')
                            h1.banner_taital Eventify
                    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    #navbarNav.collapse.navbar-collapse
                        ul.navbar-nav
                            li.nav-item
                                a.nav-link(href='/dashboardAdmin') Home
                            li.nav-item
                                a.nav-link(href='/user') User
                                
            .container-fluid.d-none.d-lg-block
                .logo
                    a(href='/dashboardAdmin')
                        h1.banner_taital Eventify
                .menu_main
                    ul
                        li.active
                            a(href='/dashboardAdmin') Home
                        li
                            a(href='/user') User
    // header section end
    // Tambahkan setelah header section end atau sebelum footer
    .admin_section.layout_padding
        .container
            // Tombol tambah user
            a.btn.btn-success.mb-3(href='/user/create') Tambah User
            h2.section_title.mt-5 Manajemen Anggota - Keuangan
            .table-responsive
                table.table.table-bordered
                    thead.thead-dark
                        tr
                            th ID
                            th Nama
                            th Email
                            th No HP
                            th Aksi
                    tbody
                        if staffKeuangan.length
                            each user in staffKeuangan
                                tr
                                    td #{user.id_user}
                                    td #{user.nama}
                                    td #{user.email}
                                    td #{user.no_hp}
                                    td
                                        a.btn.btn-warning.btn-sm(href=`/user/edit/${user.id_user}`) Edit
                                        a.btn.btn-danger.btn-sm(href=`/user/delete/${user.id_user}` onclick="return confirm('Yakin ingin menghapus user ini?')") Hapus
                        else
                            tr
                                td(colspan="5") Tidak ada staff keuangan.

            h2.section_title.mt-5 Manajemen Anggota - Kegiatan
            .table-responsive
                table.table.table-bordered
                    thead.thead-dark
                        tr
                            th ID
                            th Nama
                            th Email
                            th No HP
                            th Aksi
                    tbody
                        if staffKegiatan.length
                            each user in staffKegiatan
                                tr
                                    td #{user.id_user}
                                    td #{user.nama}
                                    td #{user.email}
                                    td #{user.no_hp}
                                    td
                                        a.btn.btn-warning.btn-sm(href=`/user/edit/${user.id_user}`) Edit
                                        a.btn.btn-danger.btn-sm(href=`/user/delete/${user.id_user}` onclick="return confirm('Yakin ingin menghapus user ini?')") Hapus
                        else
                            tr
                                td(colspan="5") Tidak ada staff kegiatan.

