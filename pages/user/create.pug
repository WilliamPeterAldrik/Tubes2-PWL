doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Tambah User Baru
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h2.mb-4 Tambah User Baru

      if error
        .alert.alert-danger #{error}

      form(method='POST' action="/user/create")
        .mb-3
          label.form-label(for="nama") Nama Lengkap
          input.form-control(type="text", name="nama", id="nama", required)

        .mb-3
          label.form-label(for="email") Email
          input.form-control(type="email", name="email", id="email", required)

        .mb-3
          label.form-label(for="no_hp") No HP
          input.form-control(type="text", name="no_hp", id="no_hp", required)

        .mb-3
          label.form-label(for="password") Password
          input.form-control(type="password", name="password", id="password", required)

        .mb-3
          label.form-label(for="id_role") Role
          select.form-select(name="id_role", id="id_role", required)
            option(value="") -- Pilih Role --
            option(value="2") Staff Keuangan
            option(value="3") Staff Kegiatan

        button.btn.btn-success(type="submit") Simpan
        a.btn.btn-secondary.ms-2(href="/user") Batal

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
