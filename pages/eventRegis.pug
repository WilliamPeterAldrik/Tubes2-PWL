doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Event Registration
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    script.
      
  body
    .container.mt-5
      h2.mb-4 Register Event

      if error
        .alert.alert-danger #{error}

      form(method='POST' action="/eventRegis")
        .mb-3
          label.form-label(for="bukti_pembayaran") Bukti Pembayaran
          input.form-control(type="text", name="bukti_pembayaran", id="bukti_pembayaran", required)

        input(type="hidden", name="status_pembayaran", value="false")

        .mb-3
          label.form-label(for="id_user") ID User
          input.form-control(type="text", name="id_user", id="id_user", required)

        .mb-3
          label.form-label(for="id_kehadiran") ID Kehadiran
          input.form-control(type="text", name="id_kehadiran", id="id_kehadiran", required)

        button.btn.btn-success(type="submit") Simpan
        a.btn.btn-secondary.ms-2(href="/eventRegis") Batal

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")

