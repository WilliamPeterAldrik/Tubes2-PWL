// header section start
.header_section
  .header_main
    .mobile_menu
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .logo_mobile
          a(href='/')
            img(src='../images/logo.png')
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/keuangan') Keuangan
            li.nav-item
              a.nav-link(href='/kegiatan') Kegiatan
            li.nav-item
              a.nav-link(href='/events') Events
    .container-fluid
      .logo
        a(href='/')
          img(src='../images/logo.png')
      .menu_main
        ul
          li.active
            a(href='/') Home
          li
            a(href='/keuangan') Keuangan
          li
            a(href='/kegiatan') Kegiatan
          li
            a(href='/events') Events
// header section end
// Ganti bagian konten utama
.blog_section.layout_padding
  .container
    // Tabel Event
    h1.blog_taital Manajemen Event
    .mb-3.text-right
      button.btn.btn-primary + Tambah Event
    .table-responsive
      table.table.table-bordered
        thead.thead-dark
          tr
            th No
            th Nama Event
            th Lokasi
            th Poster
            th Biaya Regis
            th Deadline Registrasi
            th Aksi
        tbody
          each events in data
            tr
              td #{events.id_event}
              td #{events.nama_event}
              td #{events.lokasi}
              td #{events.poster}
              td #{events.biaya_regis}
              td #{events.deadline_regis}
              button.btn.btn-warning.btn-sm Edit
              button.btn.btn-danger.btn-sm Hapus
          // Tambahkan baris lain sesuai data
    hr.my-5
    // Tabel Kehadiran
    h1.blog_taital Kehadiran &amp; Sertifikat
    p.blog_text Edit kehadiran peserta dan upload sertifikat.
    .table-responsive
      table.table.table-bordered
        thead.thead-dark
          tr
            th No
            th Nama Member
            th Event
            th Status Kehadiran
            th Sertifikat
            th Aksi
        tbody
          tr
            td 1
            td Ahmad Fauzi
            td Seminar AI
            td
              .dropdown
                button#statusDropdown.btn.btn-secondary.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                  | Pilih Status
                .dropdown-menu(aria-labelledby='statusDropdown')
                  a.dropdown-item(href='#' onclick='setStatus(this)') Hadir
                  a.dropdown-item(href='#' onclick='setStatus(this)') Tidak Hadir
              input#status_kehadiran(type='hidden' name='status_kehadiran')
            td
              input.form-control-file(type='file')
            td
              button.btn.btn-success.btn-sm Simpan
          // Tambahkan baris sesuai data
