doctype html
html(lang="id")
  head
    title Tambah Event
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body.bg-light
    .container.mt-5
      h2 Tambah Event Baru

      form(action="/events" method="POST" enctype="multipart/form-data")
        .row
          .col-md-6
            .mb-3
              label.form-label(for="nama_event") Nama Event
              input.form-control(type="text", name="nama_event", id="nama_event", required)

            .mb-3
              label.form-label(for="lokasi") Lokasi
              input.form-control(type="text", name="lokasi", id="lokasi", required)

            .mb-3
              label.form-label(for="poster") Poster (upload file)
              input.form-control(type="file", name="poster", id="poster", accept="image/*")

            .mb-3
              label.form-label(for="biaya_regis") Biaya Registrasi
              input.form-control(type="number", name="biaya_regis", id="biaya_regis", required)

            .mb-3
              label.form-label(for="peserta_maks") Maksimal Peserta
              input.form-control(type="number", name="peserta_maks", id="peserta_maks", required)

            .mb-3
              label.form-label(for="deadline_regis") Deadline Registrasi
              input.form-control(type="time", name="deadline_regis", id="deadline_regis", required)

            .mb-3
              label.form-label(for="id_kegiatan") Pilih Kegiatan
              select.form-select(name="id_kegiatan", id="id_kegiatan", required)
                option(value="") -- Pilih Kegiatan --
                each kegiatan in daftarKegiatan
                  option(value=kegiatan.id_kegiatan)= kegiatan.nama_kegiatan

          .col-md-6
            h5 Detail Event
            .mb-3
              label.form-label(for="tanggal") Tanggal Event
              input.form-control(type="date", name="tanggal", id="tanggal", required)

            .mb-3
              label.form-label(for="waktu_pelaksanaan") Waktu Mulai
              input.form-control(type="time", name="waktu_pelaksanaan", id="waktu_pelaksanaan", required)

            .mb-3
              label.form-label(for="waktu_selesai") Waktu Selesai
              input.form-control(type="time", name="waktu_selesai", id="waktu_selesai", required)

            .mb-3
              label.form-label(for="narasumber") Narasumber
              input.form-control(type="text", name="narasumber", id="narasumber", required)

        button.btn.btn-success.mt-3(type="submit") Simpan Event
        a.btn.btn-secondary.mt-3(href="/events") Batal
