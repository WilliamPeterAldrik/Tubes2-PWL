doctype html
html(lang="id")
  head
    title Edit Anggota Keuangan
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body.bg-light
    .container.mt-5
      h2 Edit Anggota Keuangan

      form(action=`/anggota-keuangan/update/${anggota.id}`, method="POST")
        //- Hidden method override jika pakai Express
        input(type="hidden", name="_method", value="PUT")

        //- Nama
        .mb-3
          label.form-label(for="nama") Nama
          input.form-control(
            type="text",
            id="nama",
            name="nama",
            required,
            value=anggota.nama
          )

        //- Email
        .mb-3
          label.form-label(for="email") Email
          input.form-control(
            type="email",
            id="email",
            name="email",
            required,
            value=anggota.email
          )

        //- Password (opsional)
        .mb-3
          label.form-label(for="password") Password (kosongkan jika tidak diubah)
          input.form-control(
            type="password",
            id="password",
            name="password"
          )

        button.btn.btn-primary(type="submit") Update
        a.btn.btn-secondary(href="/anggota-keuangan") Batal

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
