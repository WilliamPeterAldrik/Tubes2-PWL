        link(rel='stylesheet' href='../css/owl.carousel.min.css')
        link(rel='stylesheet' href='../css/owl.theme.default.min.css')
        link(rel='stylesheet' href='../https://cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css' media='screen')
    // header section start
    .header_section
        .header_main
            .mobile_menu.d-lg-none
                nav.navbar.navbar-expand-lg.navbar-light.bg-light
                    .logo_mobile
                        a(href='/')
                            img(src='../images/logo.png')
                    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    #navbarNav.collapse.navbar-collapse
                        ul.navbar-nav
                            li.nav-item
                                a.nav-link(href='/') Home
                            li.nav-item
                                a.nav-link(href='/keuangan') Keuangan
                            li.nav-item
                                a.nav-link(href='/kegiatan') Kegiatan
                            li.nav-item
                                a.nav-link(href='/events') Events
            .container-fluid.d-none.d-lg-block
                .logo
                    a(href='/')
                        img(src='../images/logo.png')
                .menu_main
                    ul
                        li.active
                            a(href='/') Home
                        li
                            a(href='/keuangan') Keuangan
                        li
                            a(href='/kegiatan') Kegiatan
                        li
                            a(href='/events') Events
    // header section end
    // Tambahkan setelah header section end atau sebelum footer
.admin_section.layout_padding
    .container
        h2.section_title.mt-6 Manajemen Anggota - Keuangan
        .text-right.mb-3
        a.btn.btn-primary.btn-round.ms-auto(href="/admin/create")
        i.fa.fa-plus
        |  Add Keuangan

        table.table.table-bordered
            thead
                tr
                    th Id
                    th Nama
                    th Email
                    th Password
                    th Aksi
            tbody
                each dataKeuangan in data
                    tr
                        td #{dataKeuangan.Id}
                        td #{dataKeuangan.Nama}
                        td #{dataKeuangan.email}
                        td #{dataKeuangan.password}
                        td
                            button.btn.btn-primary.btn-sm Edit
                            button.btn.btn-danger.btn-sm Delete
                // Tambah baris data lainnya di sini
        h2.section_title.mt-5 Manajemen Anggota - Kegiatan
        .text-right.mb-3
            button.btn.btn-success + Tambah Anggota
        table.table.table-bordered
            thead
                tr
                    th Id
                    th Nama
                    th Email
                    th Password
                    th Aksi
            tbody
                each dataKegiatan in data
                    tr
                        td #{dataKegiatan.Id}
                        td #{dataKegiatan.Nama}
                        td #{dataKegiatan.email}
                        td #{dataKegiatan.password}
                        td
                            button.btn.btn-primary.btn-sm Edit
                            button.btn.btn-danger.btn-sm Delete
