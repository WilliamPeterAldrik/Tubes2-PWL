doctype html
html(lang="id")
  head
    title Tambah Anggota Keuangan
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body(class="bg-light")
    .container.mt-5
      h2 Tambah Anggota Keuangan

      form(action="/anggota-keuangan/store", method="POST")
        //- Nama
        .mb-3
          label.form-label(for="nama") Nama
          input.form-control(type="text", id="nama", name="nama", required=true)

        //- Email
        .mb-3
          label.form-label(for="email") Email
          input.form-control(type="email", id="email", name="email", required=true)

        //- Password
        .mb-3
          label.form-label(for="password") Password
          input.form-control(type="password", id="password", name="password", required=true)

        //- Tombol Submit
        button.btn.btn-success(type="submit") Simpan
        a.btn.btn-secondary(href="/anggota-keuangan") Kembali

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")